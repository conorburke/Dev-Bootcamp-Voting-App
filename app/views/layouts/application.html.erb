<!DOCTYPE html>
<html>
  <head>
    <title>Ccct</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrap">
      <header>
        <nav>
          <div class="page-header container">
            <div class="row">
              <div class="col-md-10">
                <h1 class="header-logo"><a href="/">DBC <small>Final project</small></a></h1>
              </div>

              <% if current_user %>
                <div class="col-md-2 menu-toggle">
                  <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle menu-dd" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <span><%= current_user.full_name %></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Profile", root_path %></li>
                      <li><%= link_to "Logout", session_path(0), method: :delete %></li>
                    </ul>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

        </nav>
      </header>

      <div class="container">
        <%= yield %>
      <div id="push"></div>
      </div>
    </div>

    <div id="footer">
       <div class="container">
         <span>Copyright</span>
       </div>
     </div>

  </body>
</html>
