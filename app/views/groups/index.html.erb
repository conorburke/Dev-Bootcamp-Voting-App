<% if @cohort.current_phase == "finished" %>
<div class="groups">
  <div class="row">
      <% @groups.each do |group| %>
      <div class="col-md-4 group-lists" align="center">
        <div class="group-label">
          <%= group.name %> - <%= group.idea.title %>
        </div>
        <ul align="center" id="group-<%=group.id%>" class="list-group">
          <% group.students.each do |student| %>
            <li class="list-group-item" id="student-<%=student.id%>"><%=student.full_name%></li>
          <% end %>
        </ul>
      </div>
      <% end %>
  </div>
</div>
<% else %>
  <div class="alert alert-info hidden" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    All Groups Finalized.
  </div>
  <p id="cohort_id" class="hidden"><%= @cohort.id %></p>
  <div class="groups">
    <div class="row">
        <% @groups.each do |group| %>
        <div class="col-md-4 group-lists" align="center">
          <div class="group-label">
            <%= group.name %> - <%= group.idea.title %>
          </div>
          <ul align="center" id="group-<%=group.id%>" class="simple_with_drop list-group">
            <% group.students.each do |student| %>
              <li class="list-group-item" id="student-<%=student.id%>"><%=student.full_name%></li>
            <% end %>
          </ul>
        </div>
        <% end %>
    </div>
  </div>
  <div class="submit-group" align="center">
    <%= link_to "Save Group", cohort_group_path(@cohort, 0), method: :put,  class: "btn btn-primary btn-lg medium-btn grp-btn" %>
  </div>
<% end %>
