
<div class="form-container">
  <%= form_for :session, url: { action: "create", controller: "sessions" }, :html => {:id => "log-in-form", :class => "log-in-form"} do |f|%>
    <h3 class="text-center headers">Log In</h3>
    <div class="form-group">
      <%= f.label "Email" %>
      <%= f.text_field :email, class:"form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.label "Password" %>
      <%= f.password_field :access_code, class:"form-control" %><br>
    </div>

    <% if flash[:fail] %>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= flash[:fail] %>
      </div>
    <% end %>

    <div class="btn-container" align="center">
      <%= f.submit "Login", class: "btn btn-primary btn-lg medium-btn" %>
    </div>

  <% end %>
</div>
