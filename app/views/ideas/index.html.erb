<div class='table-container'>
  <div class ="jform"></div>
  <table class='table table'>
    <tr class="idea-header">
      <th colspan="3"><h3 class='headers text-center'>DBC Final Project Ideas</h3></th>
    </tr>
    <% @ideas.each do |idea| %>

      <tr class='idea-tr'>

        <td align="center" class="bulb-col">
          <% if !session[:selection].include? idea.id %>
            <i class="fa fa-lightbulb-o fa-3x bulb-btn" aria-hidden="true"></i>
          <% else %>
            <i class="fa fa-lightbulb-o fa-3x bulb-btn yellow-bulb" aria-hidden="true"></i>
          <% end %>
        </td>

        <td class="text-center idea-listing"><span class="title-listing"><%= idea.title %><span></td>

        <% if !session[:selection].include? idea.id %>
          <td align="center" class="vote-col"><a href="/sessions/select/<%= idea.id %>" class= "btn btn-default btn-lg vote-btn">Vote</a></td>
        <% else %>
          <td align="center" class="vote-col"><a href="/sessions/select/<%= idea.id %>" class= "btn btn-success btn-lg vote-btn">Vote</a></td>
        <% end %>

      </tr>

    <% end %>
  </table>
</div>
